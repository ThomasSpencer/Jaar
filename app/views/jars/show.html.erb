<h1><%= @jar.name %> Jaar <h1>

<div class="jar">
  <% random_item = @jar.items.sample %>
    <% case random_item.type_id  %>
      <% when 1 %>
      <p><%= random_item.comment %><p>
      <% when 2 %>
      <%= image_tag random_item.type_data.url %>
    <% end %>
</div>

<% if @jar.closed %>
  <p>
    This jar is closed
  </p>
<% else %>
  <h3><%= link_to 'New Item', new_jar_item_path(@jar) %></h3>

  <%= button_to 'Close Jar', action: 'close_jar'  %>

  <%= link_to 'Edit Jaar', edit_jar_path %>
<% end %>

<h2><%= link_to 'All Jaars', jars_path(@location) %></h2>
