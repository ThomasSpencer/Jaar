

<h1><span><%= @jar.name %></span></h1>


 <h4 class="random"><%= link_to "New Randon Memory", jar_path(@jar), id: 'refresh' %></h4>


<div class="media" id="random-item">


 <% if @media == 'empty' %>
   <p class="empty-jar">your jar is empty. Go ahead and add something!</p>
 <% else %>
   <% case @media[0]%>
     <% when 1 %>
       <p><%= @media[1] %></p>
     <% when 2 %>
       <%= image_tag @media[1] %>
       <p><%= @media[2] %></p>
     <% when 3 %>
       <%= video_tag @media[1], controls: true %>
       <p><%= @media[2] %></p>
   <% end %>
   <%= link_to 'Delete This Memory', jar_item_path(@jar, @media.last), method: :delete, id: 'item-delete' %>
 <% end %>


</div>

<% if @jar.name == 'General' %>
<ul class="jar-links-general">
    <li><%= link_to 'Add New Item to Jar', new_jar_item_path(@jar), id: 'new' %></li>
</ul>
<% else %>
  <% if @jar.closed %>
     <p>
       This jar is closed
     </p>
  <% else %>
    <ul class="jar-links">
      <li><%= link_to 'Add New Item to Jar |', new_jar_item_path(@jar), id: 'new' %></li>

    <li><%= link_to 'Edit Jaar Information |', edit_jar_path, id: 'edit' %></li>

    <li><%= link_to 'Close Jar', action: 'close_jar'  %></li>
    </ul>
  <% end %>
<% end %>
