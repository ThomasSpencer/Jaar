
<h1><%= @jar.name %> Jaar </h1>

 <h4 class="random"><%= link_to "New Randon Memory", jar_path(@jar), id: 'refresh' %></h4>


<div class="media" id="random-item">


 <% if @media == 'empty' %>
   <p>your jar is empty. Go ahead and add something!</p>
 <% else %>
   <% case @media[0]%>
     <% when 1 %>
       <p><%= @media[1] %></p>
     <% when 2 %>
       <%= image_tag @media[1] %>
       <p><%= @media[2] %></p>
     <% when 3 %>
       <%= video_tag @media[1], controls: true %>
       <p><%= @media[2] %></p>
     <% when 4 %>
      <iframe id="player" type="text/html" width="640" height="390"
        src="<%= @media[1].sub! 'watch?v=', 'embed/' %>" frameborder="0"></iframe>
     <% when 5 %>
      <iframe src="https://embed.<%= @media[1].sub! 'https://play.', '' %>" frameborder="0" allowtransparency="true"></iframe>
   <% end %>
   <%= link_to 'Delete This Memory', jar_item_path(@jar, @media.last), method: :delete, id: 'item-delete' %>
 <% end %>


</div>

<% if @jar.closed %>
   <p>
     This jar is closed
   </p>
<% else %>
  <%= link_to 'Add New Memory to Jar', new_jar_item_path(@jar), id: 'new' %>

  <%= link_to 'Edit Jaar Information', edit_jar_path, id: 'edit' %>

  <%= link_to 'Close Jar', action: 'close_jar'  %>
<% end %>
