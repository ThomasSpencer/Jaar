<%= form_tag user_sessions_path, :method => :post do %>
<form>
<div class="form-page">
   <%= label_tag :email %>
</div>
<div class="form-page">
    <%= text_field_tag :email %>
</div>
<div class="form-page">
    <%= label_tag :password %>
</div>
<div class="form-page">
    <%= password_field_tag :password %>
</div>
<div class="form-page-option">
    <%= label_tag :remember_me %>
  </div>
    <div class="form-page-checkbox">
    <%= check_box_tag :remember, params[:remember], true %>
  </div>
</div>
<div class="form-page-button">
    <%= submit_tag "Login" %>
    </div>
</div>
</form>
<% end %>
